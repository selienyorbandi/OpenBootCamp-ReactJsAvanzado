{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "document": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "overrides": [
        {
            "files": ["*.js","*.jsx"]
        }
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": 0,
        "react/prop-types": 0,
        "arrow-body-style": 0,
        "react/no-array-index-key": 0,
        "react/function-component-definition": 0,
        "import/prefer-default-export": 0,
        "no-unused-vars": "warn",
        "linebreak-style": "off",
        "quotes": ["warn", "double"]

    }
}
